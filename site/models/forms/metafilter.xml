<?xml version="1.0" encoding="utf-8"?>
 <form>
  <fieldset name = "mec_filter">
   <field
    type="calendar"
    name="jform_publish_up"
    label="Datum ab:"
    default="NOW"
    description="Auswahl des Zeitraumanfangs"
    format="%d.%m.%Y"
    class="inputbox"
    size="10"
    maxlength="10"
   />
   <field
    type="calendar"
    name="jform_publish_down"
    label="Datum bis:"
    default="NOW"
    description="Auswahl des Zeitraumendes"
    format="%d.%m.%Y"
    class="inputbox"
    size="10"
    maxlength="10"
   />
# Group selection
   <field name="prefix" type="list" default="all" label="Kalender:" description="Kalender">
      <option value="all"> - alle - </option>
      <option value="aachen">Aachen</option>
      <option value="adenau">Adenau</option>
      <option value="erftstadt">Erftstadt</option>
      <option value="eschweiler">Eschweiler</option>
      <option value="hauptverein">Hauptverein</option>
      <option value="kaisersesch">Kaisersesch</option>
      <option value="linz">Linz</option>
      <option value="marmagen">Marmagen</option>
      <option value="neuss">Neuss</option>
      <option value="wittlichland">Wittlich-Land</option>
   </field>
  </fieldset>
 </form>
